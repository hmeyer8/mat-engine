# MAT Engine environment
# Copy to .env and adjust for your workstation.

PYTHONPATH=src
APP_ENV=production
PORT=8080

# Data / Satellite ingest
MAT_DATA_DIR=./data
MAT_CACHE_DIR=./.cache
MAT_TILES_CACHE_DAYS=14

# GPU configuration
MAT_GPU_ENABLED=true
MAT_GPU_DEVICE=cuda:0
MAT_GPU_PRECISION=fp32

# API / UI
MAT_API_HOST=0.0.0.0
MAT_API_PORT=8080
MAT_API_CORS=https://api.meyerag.tech,https://meyerag.tech,http://localhost:5173
MAPS_API_KEY=
NEXT_PUBLIC_API_URL=https://api.meyerag.tech

# Copernicus Data Space (required for real Sentinel-2 ingest)
CDSE_CLIENT_ID=
CDSE_CLIENT_SECRET=

# Optional service keys
MAT_WEATHER_API_KEY=
