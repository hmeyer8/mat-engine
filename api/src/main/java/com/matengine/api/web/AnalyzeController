package com.matengine.api.web;

import org.springframework.http.*;
import org.springframework.web.bind.annotation.*;
import org.springframework.web.client.RestTemplate;
import java.util.Map;
import java.util.HashMap;

@RestController
@RequestMapping("/analyze")
public class AnalyzeController {

    private final RestTemplate restTemplate = new RestTemplate();

    @PostMapping
    public ResponseEntity<Map<String, Object>> analyze(@RequestBody Map<String, Object> payload) {
        String mlUrl = "http://matengine-ml:8001/predict";
        try {
            ResponseEntity<Map> response = restTemplate.postForEntity(mlUrl, payload, Map.class);
            Map<String, Object> result = new HashMap<>();
            result.put("status", "ok");
            result.put("ml_response", response.getBody());
            return ResponseEntity.ok(result);
        } catch (Exception e) {
            Map<String, Object> error = new HashMap<>();
            error.put("status", "error");
            error.put("message", e.getMessage());
            return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body(error);
        }
    }
}
